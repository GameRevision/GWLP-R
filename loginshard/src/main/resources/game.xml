<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<GameApp>
    
    <AppInfo>
        <DisplayName>LoginShard</DisplayName>
        <Description>The login server implementation of GWLP-R.</Description>
    
        <Startup>WhenContainerStartupFinished</Startup>
        <HeartBeat>50</HeartBeat>
    </AppInfo>
    
	<Shardlet name="LoginShard-ShardInitializer" class="com.gamerevision.gwlpr.loginshard.controllers.ShardInitializer">
		<InitParam name="dbip" value="localhost" />
		<InitParam name="dbport" value="3306" />
		<InitParam name="dbdatabase" value="gwlp-r" />
		<InitParam name="dbusername" value="root" />
		<InitParam name="dbpassword" value="" />
	</Shardlet>
    <Shardlet name="LoginShard-HandshakeController" class="com.gamerevision.gwlpr.loginshard.controllers.HandshakeController"/>
	<Shardlet name="LoginShard-GenericHandler" class="com.gamerevision.gwlpr.loginshard.controllers.GenericHandler"/>
	<Shardlet name="LoginShard-Login" class="com.gamerevision.gwlpr.loginshard.controllers.Login"/>
	<Shardlet name="LoginShard-Dispatcher" class="com.gamerevision.gwlpr.loginshard.controllers.Dispatcher"/>
	<Shardlet name="LoginShard-InstanceLoad" class="com.gamerevision.gwlpr.loginshard.controllers.InstanceLoad"/>
</GameApp>